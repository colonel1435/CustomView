<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_toolbar_height"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_toolbar_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_toolbar_arrow_margin_left"
                android:src="@mipmap/ic_back_left_arrow"/>

            <TextView
                android:id="@+id/tv_toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:padding="@dimen/default_textview_padding"
                android:text="@string/app_name"
                android:textSize="@dimen/default_textview_title_size"
                android:textColor="@color/colorWhite"/>
        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>
</LinearLayout>