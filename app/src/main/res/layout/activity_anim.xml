<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="com.zero.customview.activity.AnimActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">
        <com.zero.customview.view.BallView
            android:id="@+id/ball_veritcal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:circleColor="@color/colorCadeBlue"
            app:ballRadius="15dp" />

        <com.zero.customview.view.BallView
            android:id="@+id/ball_parabola"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:circleColor="@color/colorCadeBlue"
            app:ballRadius="15dp" />

        <TextView
            android:id="@+id/tv_startup"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/colorCadeBlue"
            android:text="@string/start_anim"
            android:padding="@dimen/item_padding_textview"
            android:layout_marginRight="3dp"/>

        <TextView
            android:id="@+id/tv_shop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorCadeBlue"
            android:text="@string/anim_shopping"
            android:padding="@dimen/item_padding_textview"
            android:layout_marginRight="3dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <LinearLayout
                android:id="@+id/ll_point_circle_1"
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:layout_centerInParent="true"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/shape_dot"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_point_circle_2"
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:layout_centerInParent="true"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/shape_dot"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_point_circle_3"
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:layout_centerInParent="true"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/shape_dot"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_point_circle_4"
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:layout_centerInParent="true"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/shape_dot"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_shop_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_shop_car"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
