<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.zero.customview">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NormalKeyBoardActivity" />
        <activity android:name=".ProgressBarActivity" />
        <activity android:name=".DrawViewActivity" />
        <activity
            android:name=".DownloadActivity"
            android:label="@string/task_download"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ShapeActivity" />
        <activity android:name=".CanvasViewActivity" />
        <activity android:name=".AnimActivity" />
        <activity android:name=".activity.DragViewActivity" />
        <activity
            android:name=".activity.PhotoViewActivity"
            android:label="@string/title_activity_photo_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.DragPhotoActivity"
            android:theme="@style/translucent"/>
        <activity android:name=".activity.FadePhotoActivity"
            android:theme="@style/ImageTheme.Transparent"/>
    </application>

</manifest>